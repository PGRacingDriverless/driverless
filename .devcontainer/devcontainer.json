{
    "name": "pgr_dv",
    "containerUser": "ros",
    "build": {
        "dockerfile": "${localWorkspaceFolder}/Dockerfile"
    },
    "privileged": true,
    "customizations": {
        "vscode": {
            "extensions":[
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "ms-iot.vscode-ros"
            ]
        }
    },
    "workspaceMount": "source=${localWorkspaceFolder}/ws,target=/home/ros/ws,type=bind",
    "workspaceFolder": "/home/ros/ws",
    "containerEnv": {
        "DISPLAY": "unix:0",
        "WAYLAND_DISPLAY": "wayland-0",
        "XDG_RUNTIME_DIR": "/mnt/wslg/runtime-dir",
        "PULSE_SERVER": "/mnt/wslg/PulseServer",
        "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST",
        "ROS_DOMAIN_ID": "42"
    },
    "runArgs": [
        "-e", "DISPLAY=${env:DISPLAY}",
        "-v", "/dev:/dev",
		"-v", "/dev/video*:/dev/video*",
        "--gpus=all",
        "--ipc=host",
        "--name=pgr_dv",
        "--network=host",
        "--rm"
    ],
    "mounts": [
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
        "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached"
    ],
    "postCreateCommand": "export TURTLEBOT3_MODEL=waffle && export GAZEBO_WORLD=turtlebot3_world"
}